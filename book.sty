\usepackage{general}

% ------------- Commands & Environments ------------- 
\definecolor{Heading}{HTML}{333333}

% Very First Title Styling
\newcommand{\topic}[1]{
	\begin{center}
		\begin{Huge}
			\textbf{#1}
		\end{Huge}
	\end{center}
}
\newcommand{\desc}[1]{
	\begin{center}
		\begin{large}
			\textbf{#1}
		\end{large}
	\end{center}
}

% Heading lvl1
\newcommand{\hI}[1]{
  \color{Heading}
  \chapter{#1}
}

% Heading lvl2
\newcommand{\hII}[1]{
	\begin{large}
		\color{black}
		\section{#1}
	\end{large}
}

% Heading lvl2 without numbering
\newcommand{\hIIn}[1]{
	\begin{large}
		\color{black}
		\section*{\underline{#1}}
	\end{large}
}

% Heading lvl3
\newcommand{\hIII}[1]{
	\begin{large}
		\color{black}
		\subsection{#1}
	\end{large}
}

% Heading lvl3 without numbering
\newcommand{\hIIIn}[1]{
	\begin{large}
		\color{black}
		\subsection*{\underline{#1}}
	\end{large}
}

% Shortcut to split page into two columns
\newcommand{\twocolumns}[3][]{
\begin{minipage}[t][#1\textheight]{.45\textwidth}
	#2
	\vfill
\end{minipage}
\hfill\vline\hfill
\begin{minipage}[t][#1\textheight]{.45\textwidth}
	#3
	\vfill
\end{minipage} \\~\\
}

\newcommand{\withDate}[2]{\textbf{#1}\hfill\colored{red}{#2}}