% Add Colored Text
\newcommand{\colored}[2]{\color{#1}#2 \color{cBody}}

% Shortcut for special expressions and idioms
\newcommand{\idiom}[1]{\colored{accent}{\textbf{"#1"}}}

% Shortcut for important pieces of sentences
\newcommand{\imp}[1]{\colored{cBody}{\textbf{#1}}}

% Shortcut for important equations
\newcommand{\impeq}[1]{\colored{blue}{\ensuremath{#1}}}

% Shortcut for roman numerals
\newcommand*{\rom}[1]{\expandafter\@slowromancap\romannumeral #1@}


